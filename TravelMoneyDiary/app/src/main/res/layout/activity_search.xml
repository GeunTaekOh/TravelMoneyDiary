<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#008B8B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:background="#F5FAFA"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:id="@+id/editText_StartDay"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17dp"
            android:inputType="number"
            android:gravity="center"
            android:onClick="onclickstart"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=" ~ "
            android:textSize="5mm"
            android:textColor="#000000"
            android:id="@+id/textView" />

        <TextView
            android:id="@+id/editText_EndDay"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17dp"
            android:inputType="number"
            android:gravity="center"
            android:onClick="onclickend"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="조회"
            android:textSize="3mm"
            android:id="@+id/button_Search"
            android:layout_weight="0.10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ACD1E9"
        android:gravity="center"
        android:layout_weight="2">

        <com.github.mikephil.charting.charts.PieChart
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/expense_Chart"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F5FAFA"
        android:gravity="center"
        android:layout_weight="2">

        <ListView
            android:id="@+id/expenseListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ACD1E9"
        android:gravity="center"
        android:layout_weight="2">

        <com.github.mikephil.charting.charts.PieChart
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/income_Chart"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F5FAFA"
        android:gravity="center"
        android:layout_weight="2">

        <ListView
            android:id="@+id/incomeListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>
</LinearLayout>

